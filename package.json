{
  "name": "boats",
  "version": "1.9.1",
  "description": "Beautiful Open Api Template System - Write less yaml with BOATS and Nunjucks.",
  "keywords": [
    "asyncapi",
    "openapi",
    "openapi2",
    "openapi3",
    "swagger",
    "openapi template",
    "yaml",
    "bundle",
    "nunjucks",
    "yml",
    "yaml",
    "DDD",
    "Documentation-Driven Development"
  ],
  "main": "index.js",
  "bin": {
    "boats": "./bin/cli.js"
  },
  "scripts": {
    "install:githooks": "cp ./githooks/* .git/hooks",
    "clean:build": "rm -fR ./build/*",
    "lint": "eslint *.js src/",
    "test": "npm run clean:build && npm run test:builds && npm run test:unit",
    "test:unit": "jest",
    "test:builds": "npm run test:build-cli:asyncapi:std && npm run test:build-cli:oa2:std && npm run test:build-cli:oa2:readonly && npm run test:build-cli:oa2:std:exclude-version && npm run test:build-cli:oa3:std && npm run test:build-cli:oa3:std:exclude-version",
    "test:build-cli:asyncapi:std": "node ./bin/cli.js -i ./srcASYNC2/index.yml.njk -o ./build/srcASYNC2.yml -t asyncapi",
    "test:build-cli:oa2:std": "node ./bin/cli.js -i ./srcOA2/index.yml.njk -o ./build/builtOA2_std.yml -s srcOA2/paths/",
    "test:build-cli:oa2:readonly": "node ./bin/cli.js -i ./srcOA2/index.readonly.yml.njk -o ./build/builtOA2_readonly.yml -s srcOA2/paths/",
    "test:build-cli:oa3:std": "node ./bin/cli.js -i ./srcOA3/index.yml.njk -o ./build/builtOA3.yml -s srcOA3/paths/",
    "test:build-cli:oa2:std:exclude-version": "node ./bin/cli.js -i ./srcOA2/index.yml.njk -o ./build/builtOA2_no_version.yml -x -s srcOA2/paths/",
    "test:build-cli:oa3:std:exclude-version": "node ./bin/cli.js -i ./srcOA3/index.yml.njk -o ./build/builtOA3.yml -x -s srcOA3/paths/",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johndcarmichael/boats.git"
  },
  "author": "John Carmichael",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johndcarmichael/boats/issues"
  },
  "homepage": "https://github.com/johndcarmichael/boats#readme",
  "dependencies": {
    "asyncapi-parser": "^0.15.0",
    "camelcase": "^6.0.0",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "js-yaml": "^3.13.1",
    "json-schema-ref-parser": "^8.0.0",
    "npm-tool-version-check": "^1.0.1",
    "nunjucks": "^3.2.1",
    "swagger-parser": "^9.0.1",
    "walker": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "eslint": "^6.8.0",
    "jest": "^25.2.7"
  },
  "engines": {
    "node": "12"
  }
}
